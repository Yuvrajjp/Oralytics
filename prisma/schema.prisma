generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organism {
  id             String       @id @default(cuid())
  scientificName String
  commonName     String?
  taxonomyId     Int?
  description    String?
  habitat        String?
  genomeSizeMb   Float?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  chromosomes    Chromosome[]
  genes          Gene[]
  profile        OrganismProfile?
  profileHistory ProfileHistory[]

  @@index([scientificName])
  @@index([commonName])
  @@index([habitat])
}

model Chromosome {
  id          String    @id @default(cuid())
  name        String
  lengthMb    Float?
  organismId  String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
    accession   String?   @unique
    description String?
    sequenceLength Int?
    gcContent   Float?
  organism    Organism  @relation(fields: [organismId], references: [id], onDelete: Cascade)
  genes       Gene[]

  @@index([organismId])
}

model Gene {
  id            String        @id @default(cuid())
  symbol        String
  name          String
  description   String?
    locus_tag     String?
  startPosition Int?
  endPosition   Int?
  strand        String?
  organismId    String
  chromosomeId  String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  organism      Organism      @relation(fields: [organismId], references: [id], onDelete: Cascade)
  chromosome    Chromosome?   @relation(fields: [chromosomeId], references: [id], onDelete: SetNull)
  proteins      Protein[]
  articles      GeneArticle[]

  @@unique([organismId, symbol])
  @@unique([chromosomeId, locus_tag])
  @@index([organismId])
  @@index([chromosomeId])
  @@index([symbol])
  @@index([name])
}

model Protein {
  id              String   @id @default(cuid())
  accession       String   @unique
  name            String
  description     String?
  sequenceLength  Int?
  molecularWeight Float?
  localization    String?
  sequence        String?
  source          String?
  functionClass   String?
  structureClass  String?
  predictedLocalization String?
  geneId          String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  gene            Gene     @relation(fields: [geneId], references: [id], onDelete: Cascade)
  secretionInfo   ProteinSecretionInfo?
  mlPredictions   MLPrediction[]
  analyses        ProteinAnalysis[]
}

model Article {
  id          String       @id @default(cuid())
  title       String
  doi         String?      @unique
  journal     String?
  publishedAt DateTime?
  url         String?
  summary     String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  genes       GeneArticle[]
}

model GeneArticle {
  geneId          String
  articleId       String
  keyFinding      String?
  relevanceScore  Int?
  gene            Gene     @relation(fields: [geneId], references: [id], onDelete: Cascade)
  article         Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@id([geneId, articleId])
}

model OrganismProfile {
  id                      String            @id @default(cuid())
  organismId              String            @unique
  organism                Organism          @relation(fields: [organismId], references: [id], onDelete: Cascade)
  versionNumber           Int               @default(1)
  
  // Phenotypic characteristics from HOMD/BacDive
  gramStain               String?
  cellShape               String?
  cellArrangement         String?
  motility                String?
  
  // Genotypic characteristics
  gcContent               Float?
  genomeDescription       String?
  
  // Cultivation characteristics
  cultivability           String?
  temperatureOptimal      Float?
  temperatureRange        String?
  phOptimal               Float?
  phRange                 String?
  
  // Ecology and environment
  habitat                 String?
  ecologyDescription      String?
  pathogenicity           String?
  
  // Genomic data
  pangenomeInfo           String?
  ncbiTaxonId             Int?
  ncbiGenomeAccession     String?
  ncbiGenomeDownloadUrl  String?
  ncbiTaxonomyUrl        String?
  
  // Counts and sizes (added for ingestion tracking)
  genomeSize              Int?
  estimatedGenes          Int?
  estimatedProteins       Int?
  
  // Data sources and references
  homdUrl                 String?
  bacdiveUrl              String?
  bacdiveId               String?
  
  // Timestamps and audit
  createdAt               DateTime          @default(now())
  updatedAt               DateTime          @updatedAt
  history                 ProfileHistory[]
}

model ProfileHistory {
  id                String            @id @default(cuid())
  profileId         String
  profile           OrganismProfile   @relation(fields: [profileId], references: [id], onDelete: Cascade)
  organismId        String
  organism          Organism          @relation(fields: [organismId], references: [id], onDelete: Cascade)
  
  // Change tracking
  versionNumber     Int
  changeField       String?           // which field changed (e.g., "gramStain", "habitat")
  previousValue     String?
  newValue          String?
  changeReason      String?           // why it was changed (e.g., "Updated from HOMD v31", "BacDive strain data")
  dataSource        String?           // "HOMD", "BacDive", "Manual", etc.
  
  // Audit trail
  changedAt         DateTime          @default(now())
  changedBy         String?           // user or system identifier
  notes             String?
  
  @@index([profileId])
  @@index([organismId])
  @@index([changedAt])
}

// New models for secretome analysis and ML predictions

model ProteinSecretionInfo {
  id                    String   @id @default(cuid())
  proteinId             String   @unique
  protein               Protein  @relation(fields: [proteinId], references: [id], onDelete: Cascade)
  
  // Secretion pathway classification
  isSecreted            Boolean  @default(false)
  secretionPathway      String?  // T1SS, T2SS, T5SS, OMV, Tat, Sec, etc.
  
  // Signal sequence predictions
  hasSignalPeptide      Boolean  @default(false)
  signalPeptidePosition Int?     // Cleavage site position
  signalPeptideType     String?  // Sec, Tat, Lipoprotein, etc.
  
  // Transmembrane topology
  hasTransmembrane      Boolean  @default(false)
  tmHelixCount          Int?
  tmTopology            String?  // JSON or string describing topology
  
  // Cellular localization
  predictedLocation     String?  // Cytoplasmic, Periplasmic, InnerMembrane, OuterMembrane, Extracellular
  locationConfidence    Float?   // Confidence score 0-1
  
  // Secretion system components
  isSecretionMachinery  Boolean  @default(false)
  secretionSystemType   String?  // T1SS, T2SS, etc.
  systemComponent       String?  // ATPase, Adaptor, Channel, etc.
  
  // OMV association
  foundInOMV            Boolean  @default(false)
  omvEnrichment         Float?
  
  // Data source and method
  predictionMethod      String?
  dataSource            String?  // Experimental, Predicted, Literature
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@index([isSecreted])
  @@index([secretionPathway])
  @@index([predictedLocation])
}

model SecretionSystem {
  id                String                  @id @default(cuid())
  name              String                  // e.g., "Leukotoxin T1SS", "General Sec pathway"
  type              String                  // T1SS, T2SS, T3SS, T4SS, T5SS, T6SS, Sec, Tat, etc.
  description       String?
  
  // Genomic location
  organismId        String
  chromosomeId      String?
  startPosition     Int?
  endPosition       Int?
  
  // Components
  components        SecretionSystemComponent[]
  
  // Cargo proteins (what it secretes)
  cargoProteins     SecretionSystemCargo[]
  
  createdAt         DateTime                @default(now())
  updatedAt         DateTime                @updatedAt
  
  @@index([organismId])
  @@index([type])
}

model SecretionSystemComponent {
  id                String          @id @default(cuid())
  systemId          String
  system            SecretionSystem @relation(fields: [systemId], references: [id], onDelete: Cascade)
  
  geneId            String?
  locusTag          String?
  proteinId         String?
  
  componentName     String          // e.g., "LtxA", "HlyD adaptor", "ATPase"
  componentType     String          // ATPase, Adaptor, Channel, Toxin, etc.
  description       String?
  
  genomicStart      Int?
  genomicEnd        Int?
  
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  
  @@index([systemId])
  @@index([locusTag])
}

model SecretionSystemCargo {
  systemId          String
  proteinId         String
  system            SecretionSystem @relation(fields: [systemId], references: [id], onDelete: Cascade)
  
  cargoType         String?         // Toxin, Enzyme, Adhesin, etc.
  isKnown           Boolean         @default(false)  // Known vs predicted
  evidenceSource    String?         // Literature, Proteomics, Predicted
  
  createdAt         DateTime        @default(now())
  
  @@id([systemId, proteinId])
  @@index([systemId])
  @@index([proteinId])
}

model MLPrediction {
  id                String   @id @default(cuid())
  proteinId         String
  protein           Protein  @relation(fields: [proteinId], references: [id], onDelete: Cascade)
  
  predictionType    String   // structure, function, localization, secretion, etc.
  modelName         String   // ESM2, ProtBERT, SignalP, etc.
  modelVersion      String?
  
  prediction        String   // JSON blob with prediction details
  confidence        Float?
  
  metadata          String?  // JSON blob with additional metadata
  
  createdAt         DateTime @default(now())
  
  @@index([proteinId])
  @@index([predictionType])
  @@index([modelName])
}

model ProteinAnalysis {
  id                String   @id @default(cuid())
  proteinId         String
  protein           Protein  @relation(fields: [proteinId], references: [id], onDelete: Cascade)
  
  analysisType      String   // sequence_search, structure_prediction, functional_annotation, etc.
  status            String   // pending, running, completed, failed
  
  inputParams       String?  // JSON blob with input parameters
  results           String?  // JSON blob with results
  
  startedAt         DateTime @default(now())
  completedAt       DateTime?
  
  @@index([proteinId])
  @@index([analysisType])
  @@index([status])
}

model PredictionCache {
  id                String   @id @default(cuid())
  cacheKey          String   @unique
  cacheValue        String   // JSON blob
  
  predictionType    String
  metadata          String?  // JSON blob
  
  hitCount          Int      @default(0)
  lastAccessedAt    DateTime @default(now())
  createdAt         DateTime @default(now())
  expiresAt         DateTime?
  
  @@index([predictionType])
  @@index([expiresAt])
}
